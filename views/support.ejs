<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Hỗ trợ - Vconnex</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
<style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background-color: #f8f9fa;
    }

    /* Main Content */
    .contact-section {
      background-image: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1920 600"><rect fill="%23f8f9fa" width="1920" height="600"/><path fill="%23e9ecef" opacity="0.5" d="M0,300 Q480,200 960,300 T1920,300 L1920,600 L0,600 Z"/></svg>');
      background-size: cover;
      background-position: center;
      padding: 40px 0;
      position: relative;
      overflow: hidden;
    }

    .contact-section::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: linear-gradient(135deg, rgba(255,255,255,0.9) 0%, rgba(248,249,250,0.95) 100%);
    }

    .contact-content {
      position: relative;
      z-index: 2;
    }

    /* Contact Info Card */
    .contact-info {
      background: #fff;
      border-radius: 10px;
      padding: 20px;
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
      border: 1px solid #ddd;
    }

    .contact-title {
      color: #f15a24;
      font-size: 20px;
      font-weight: bold;
      margin-bottom: 20px;
      text-transform: uppercase;
      position: relative;
    }

    .contact-title::after {
      content: '';
      position: absolute;
      bottom: -5px;
      left: 0;
      width: 40px;
      height: 2px;
      background: #f15a24;
    }

    .contact-item {
      display: flex;
      align-items: flex-start;
      margin-bottom: 15px;
      padding: 10px 0;
      border-bottom: 1px solid #eee;
    }

    .contact-item:last-child {
      border-bottom: none;
    }

    .contact-icon {
      color: #f15a24;
      font-size: 18px;
      margin-right: 10px;
      margin-top: 3px;
      min-width: 20px;
    }

    .contact-details {
      flex: 1;
    }

    .contact-label {
      font-weight: bold;
      color: #333;
      margin-bottom: 3px;
    }

    .contact-text {
      color: #666;
      line-height: 1.4;
    }

    .contact-text a {
      color: #4285f4;
      text-decoration: none;
    }

    .contact-text a:hover {
      text-decoration: underline;
    }

    /* Registration Form */
    .registration-form {
      background: #003087;
      border-radius: 10px;
      padding: 20px;
      color: white;
      box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    }

    .form-header {
      text-align: center;
      margin-bottom: 20px;
    }

    .form-badge {
      background: #f15a24;
      color: white;
      padding: 5px 15px;
      border-radius: 15px;
      font-size: 12px;
      font-weight: bold;
      display: inline-block;
      margin-bottom: 10px;
      text-transform: uppercase;
    }

    .form-title {
      font-size: 18px;
      font-weight: bold;
      margin: 0;
    }

    .form-control {
      border: none;
      border-radius: 5px;
      padding: 10px;
      font-size: 14px;
      background: rgba(255,255,255,0.8);
      color: #333;
      margin-bottom: 10px;
      transition: all 0.3s ease;
    }

    .form-control:focus {
      background: white;
      box-shadow: 0 0 0 0.2rem rgba(241, 90, 36, 0.25);
      border-color: #f15a24;
    }

    .form-control::placeholder {
      color: #999;
    }

    .form-select {
      background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16'%3e%3cpath fill='none' stroke='%23666' stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='m1 6 7 7 7-7'/%3e%3c/svg%3e");
    }

    .form-check {
      margin-bottom: 10px;
    }

    .form-check-input:checked {
      background-color: #f15a24;
      border-color: #f15a24;
    }

    .form-check-label {
      color: rgba(255,255,255,0.9);
      font-size: 12px;
      margin-left: 5px;
    }

    .btn-submit {
      background: #f15a24;
      border: none;
      color: white;
      padding: 10px 20px;
      border-radius: 5px;
      font-weight: bold;
      font-size: 14px;
      transition: all 0.3s ease;
      width: 100%;
    }

    .btn-submit:hover {
      background: #d14920;
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(241, 90, 36, 0.3);
    }

    /* Maps Section */
    .maps-section {
      padding: 80px 0;
      background: white;
    }

    .maps-title {
      text-align: center;
      font-size: 32px;
      font-weight: bold;
      color: #333;
      margin-bottom: 60px;
    }

    .map-card {
      background: white;
      border-radius: 15px;
      overflow: hidden;
      box-shadow: 0 10px 30px rgba(0,0,0,0.1);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      margin-bottom: 30px;
    }

    .map-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 20px 40px rgba(0,0,0,0.15);
    }

    .map-header {
      background: #4285f4;
      color: white;
      padding: 20px;
      text-align: center;
      font-size: 18px;
      font-weight: bold;
    }

    .map-container {
      height: 300px;
      position: relative;
    }

    .map-container iframe {
      width: 100%;
      height: 100%;
      border: 0;
    }

    /* Responsive */
    @media (max-width: 768px) {
      .contact-section {
        padding: 20px 0;
      }
      
      .contact-info, .registration-form {
        margin-bottom: 20px;
      }
      
      .maps-title {
        font-size: 24px;
        margin-bottom: 40px;
      }
    }

    /* Animation */
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .fade-in {
      animation: fadeInUp 0.8s ease-out;
    }
  </style>
</head>
