<script>
  // Gắn sự kiện cho tất cả nút "Tư vấn ngay"
  document.querySelectorAll('.btn.btn-danger').forEach(btn => {
    btn.addEventListener('click', function (e) {
      e.preventDefault();
      const title = this.closest('.d-flex.flex-column').querySelector('h5').textContent;
      document.getElementById('solution').value = title;
      document.getElementById('consultationForm').classList.remove('d-none');
      document.getElementById('consultationSuccess').classList.add('d-none');
      const modal = new bootstrap.Modal(document.getElementById('consultationModal'));
      modal.show();
    });
  });

  // Gửi dữ liệu tới server
  document.getElementById('consultationForm').addEventListener('submit', async function (e) {
    e.preventDefault();

    const formData = {
      name: document.getElementById('name').value.trim(),
      phone: document.getElementById('phone').value.trim(),
      solution: document.getElementById('solution').value.trim(),
      message: document.getElementById('message').value.trim()
    };

    try {
      const res = await fetch('/consultation', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(formData)
      });

      if (res.ok) {
        document.getElementById('consultationForm').classList.add('d-none');
        document.getElementById('consultationSuccess').classList.remove('d-none');
      } else {
        alert("Lỗi gửi tư vấn. Vui lòng thử lại.");
      }
    } catch (err) {
      console.error(err);
      alert("Không thể kết nối tới máy chủ.");
    }
  });
</script>


