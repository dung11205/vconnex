        });

        if (res.ok) {
          document.getElementById('consultationForm').classList.add('d-none');
          document.getElementById('consultationSuccess').classList.remove('d-none');
        } else {
          alert("Lỗi gửi tư vấn. Vui lòng thử lại.");
